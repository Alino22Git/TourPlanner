<Window x:Class="TourPlanner.AddTourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Tour" Height="400" Width="400"
        DataContext="{Binding RelativeSource={RelativeSource Self}}" Foreground="White" Style="{DynamicResource MyStyle}">
    <StackPanel Margin="10">
        <Label Content="Name:" Foreground="White"/>
        <TextBox x:Name="NameTextBox" Margin="0,0,0,5"/>

        <Label Content="From:" Foreground="White"/>
        <TextBox x:Name="FromTextBox" Margin="0,0,0,5"/>

        <Label Content="To:" Foreground="White"/>
        <TextBox x:Name="ToTextBox" Margin="0,0,0,5"/>


        <Label Content="Distance:" Foreground="White"/>
        <TextBox x:Name="DistanceTextBox" Margin="0,0,0,5"/>

        <Label Content="Time:" Foreground="White"/>
        <TextBox x:Name="TimeTextBox" Margin="0,0,0,5"/>

        <Label Content="Description:" Foreground="White"/>
        <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add" Click="AddButton_Click" Margin="0,20,5,0" Padding="15,0"/>
            <Button Content="Cancel" Click="CancelButton_Click"  Margin="0,20,0,0" Padding="10,2"/>
        </StackPanel>
    </StackPanel>
</Window>