<UserControl x:Class="TourPlanner.Views.SubViews.UserMainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Menu Foreground="White" Background="#FF312929">
        <MenuItem Header="File" Padding="10,2">
            <MenuItem Header="Generate Report" Command="{Binding GenerateReportWithMapScreenshotCommand}" Padding="10,2" Foreground="White" Background="#FF312929"/>
            <MenuItem Header="Generate Summary Report" Command="{Binding SummaryReportGenCommand}" Padding="10,2" Foreground="White" Background="#FF312929"/>
            <MenuItem Header="Export Tours" Command="{Binding ExportToursCommand}" Padding="10,2" Foreground="White" Background="#FF312929" />
            <MenuItem Header="Import Tours" Command="{Binding ImportToursCommand}" Padding="10,2" Foreground="White" Background="#FF312929" />
        </MenuItem>
        <MenuItem Header="Edit" Padding="10,2"/>
        <MenuItem Header="Options" Padding="10,2"/>
        <MenuItem Header="Help" Padding="10,2"/>
    </Menu>
</UserControl>
